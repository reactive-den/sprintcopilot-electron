{
  "name": "sprintcopilot-app",
  "version": "1.0.0",
  "description": "Track your sprint progress with SprintCopilot",
  "type": "module",
  "main": "dist/main/main.js",
  "scripts": {
    "build": "npm run build:main && npm run build:preload && npm run build:renderer && npm run copy:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json && npm run rename:preload",
    "rename:preload": "mv dist/preload/preload.js dist/preload/preload.cjs 2>/dev/null || true",
    "build:renderer": "tsc -p tsconfig.renderer.json",
    "copy:renderer": "mkdir -p dist/renderer && cp src/renderer/index.html dist/renderer/ && cp -r src/renderer/assets dist/renderer/",
    "build:watch": "npm run build:main && npm run build:preload && npm run copy:renderer & tsc -p tsconfig.main.json --watch & tsc -p tsconfig.preload.json --watch & tsc -p tsconfig.renderer.json --watch",
    "start": "npm run build && electron .",
    "dev": "npm run build:watch & NODE_ENV=development electron .",
    "build:app": "npm run build && electron-builder",
    "build:mac": "npm run build && electron-builder --mac",
    "build:win": "npm run build && electron-builder --win",
    "build:linux": "npm run build && electron-builder --linux",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist out"
  },
  "keywords": [
    "electron",
    "desktop",
    "app"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.3.1",
    "node-global-key-listener": "^0.3.0",
    "robotjs": "^0.6.0",
    "screenshot-desktop": "^1.15.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "typescript": "^5.9.3"
  },
  "build": {
    "appId": "com.sprintcopilot.app",
    "productName": "SprintCopilot",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
